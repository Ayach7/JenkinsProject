pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'user/repository:latest'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                bat 'npm install'
            }
        }
        stage('Test') {
            steps {
                bat 'npm test'
            }
        }
        stage('Docker Build & Push') {
            steps {
                script {
                    bat 'docker build -t %DOCKER_IMAGE% .'
                    bat 'docker login -u %DOCKER_USER% -p %DOCKER_PASSWORD%'
                    bat 'docker push %DOCKER_IMAGE%'
                }
            }
        }
        stage('Deploy') {
            steps {
                sshagent(['deploy-key']) {
                    bat 'ssh user@remote-server docker pull %DOCKER_IMAGE%'
                    bat 'ssh user@remote-server docker run -d -p 80:80 %DOCKER_IMAGE%'
                }
            }
        }
    }
}